page {
    display: block;
    min-height: 100%;

    background-color: #f5f5f5;
}

.match-waybill-container {
    padding-bottom: 150rpx;
}

.title-display {
    padding:20rpx 40rpx;
    margin: 40rpx;
    margin-bottom: 36rpx;
    box-sizing: border-box;

    font-size: 28rpx;
    line-height: 60rpx;


    color: #434343;
    border-radius: 8rpx;
    background-color: #fff;
    box-shadow: 0 1px 2px 0 #dbdbdb;
}

.flex-wrpper {
    display: flex;
    flex-direction: row;
}

.title-display-item {
    width: 50%;
}

.waybill-list {
    width: 100%;
    padding: 0rpx 40rpx 0rpx 40rpx;

    background-color: #f5f5f5;
}

.waybill-item {
    width: 100%;
    margin-bottom: 36rpx;

    border-radius: 8rpx;
    background-color: #fff;
    box-shadow: 0 1px 2px 0 #dbdbdb;
}

.waybill-item-title {
    height: 104rpx;
    padding: 0 40rpx;

    font-size: 32rpx;
    line-height: 104rpx;

    color: #434343;
    border-top-left-radius: 8rpx;
    border-top-right-radius: 8rpx;
}

.waybill-item-title-content {
    position: relative;

    height: 104rpx;
    padding-right: 150rpx;

    border-bottom: 1rpx solid #e9e9e9;
}

.status-display {
    position: absolute;
    right: 0;

    font-size: 28rpx;

    color: #67c23a;
}



.waybill-item-content {
    padding: 30rpx 40rpx 40rpx 40rpx;

    font-size: 28rpx;
    line-height: 58rpx;

    color: #434343;
}

.waybill-item-content text {
    display: block;
}

.go-match-btn {
    height: 70rpx;
    margin-top: 36rpx;

    font-size: 32rpx;
    line-height: 70rpx;

    color: #17bebc;
    border: 1px solid #47d2d0;
    border-radius: 10rpx;
    background-color: #fff;
}

.buttom-confirm {
    position: fixed;
    bottom: 0;

    width: 100%;
    height: 150rpx;
    padding: 28rpx 20rpx;

    background-color: #fff;
}
.confirm-match-btn {
    width: 100%;
    height: 100rpx;

    font-size: 36rpx;
    line-height: 100rpx;

    color: #fff;
    border-radius: 5px;
    background: #499bf8;
}
