page {
    display: block;
    min-height: 100%;

    background-color: #f5f5f5;
}

.match-waybill-container {
    padding-bottom: 150rpx;
}



.top-bar-view {
    position: fixed;
    top: 0;
    z-index: 99;

    width: 100%;
    height: 105rpx;

    background-color: #499bf8;
}
.search-view {
    padding: 4px 16px 0 16px;
}

.search-box {
    display: flex;
    width: 100%;
    height: 72rpx;
    padding: 12rpx 0;
    flex-direction: row;

    border-radius: 50rpx;
    background-color: #fff;
}

.traggle-pick {
    position: relative;

    width: 210rpx;
    height: 48rpx;
    padding-left: 30rpx;

    border-right: 1rpx solid #abb1b1;
}

.filed-picker {
    width: 130rpx;

    font-size: 28rpx;
    line-height: 48rpx;

    color: #666;
}

.traggle-down {
    position: absolute;
    top: 16rpx;
    right: 15rpx;

    width: 20rpx;
    height: 20rpx;
}

.traggle-down image {
    display: block;
    width: 20rpx;
    height: 20rpx;
}

.search-input-view {
    width: 450rpx;
    padding: 0 15rpx;
}

.search-input-view input {
    width: 420rpx;
    height: 48rpx;

    font-size: 28rpx;
    line-height: 48rpx;
}


.waybill-list {
    width: 100%;
    padding: 140rpx 40rpx 0rpx 40rpx;

    background-color: #f5f5f5;
}

.waybill-item {
    width: 100%;
    margin-bottom: 36rpx;

    border-radius: 8rpx;
    background-color: #fff;
    box-shadow: 0 1px 2px 0 #dbdbdb;
}

.waybill-item-title {
    height: 104rpx;
    padding: 0 40rpx;

    font-size: 32rpx;
    line-height: 104rpx;

    color: #434343;
    border-top-left-radius: 8rpx;
    border-top-right-radius: 8rpx;
}

.waybill-item-title-content {
    position: relative;

    height: 104rpx;
    padding-right: 150rpx;

    border-bottom: 1rpx solid #e9e9e9;
}

.no-choose {
    position: absolute;
    top: 24rpx;
    right: 0;

    width: 23px;
    height: 23px;

    border-radius: 50%;
    background-color: #e1e1e1;
}

.choose-icon {
    position: absolute;
    top: 21rpx;
    right: 0;
}

.status-display {
    position: absolute;
    right: 40rpx;
    bottom: 40rpx;

    font-size: 28rpx;
    line-height: 58rpx;
}


.waybill-item-content {
    position: relative;

    padding: 30rpx 40rpx 40rpx 40rpx;

    font-size: 28rpx;
    line-height: 58rpx;

    color: #434343;
}

.waybill-item-content text {
    display: block;
}

.go-match-btn {
    height: 70rpx;
    margin-top: 36rpx;

    font-size: 32rpx;
    line-height: 70rpx;

    color: #17bebc;
    border: 1px solid #47d2d0;
    border-radius: 10rpx;
    background-color: #fff;
}

.buttom-confirm {
    position: fixed;
    bottom: 0;

    width: 100%;
    height: 150rpx;
    padding: 28rpx 40rpx;

    background-color: #fff;
}
.confirm-match-btn {
    width: 100%;
    height: 94rpx;

    font-size: 36rpx;
    line-height: 100rpx;

    color: #fff;
    border-radius: 5px;
    background: #499bf8;
}

button[disabled]:not([type]) {
    color: #fff;
    border: 0 none;
    background-color: #c7cacd;
}

.null-view {
    width: 270rpx;
    margin: 180rpx auto 0 auto;

    text-align: center;
}
.null-view image {
    width: 270rpx;
    height: 270rpx;
}

.null-view text {
    font-size: 32rpx;
    font-weight: 400;
    line-height: 44rpx;

    color: #a4aeba;
}
