/* pages/dashborad/dashborad.wxss */

page {
    display: block;
    min-height: 100%;

    background-color: #f5f5f5;
}

.inner-container {
    width: 100%;
    margin-top: 32rpx;
}
.nav-item {
    width: 339rpx;
    height: 340rpx;
    padding: 86rpx 0 0 0;
    margin-left: 24rpx;
    box-sizing: border-box;

    background-color: #fff;
    border-radius:8rpx;
    box-shadow: 0 0 5px #dbdbdb;
}
.item-num {
    font-size: 80rpx;
    line-height: 112rpx;

    color: #499BF8;
}
.item-title {
    font-size: 32rpx;
    line-height: 44rpx;

    color: #666;
}
.item-unit {
    font-size: 28rpx;
    line-height: 40rpx;

    color: #dbdbdb;
}
