.page-body {
    width: 100%;
    padding: 0 40rpx;
}
label {
    display: inline-block;
    min-width: 270rpx;
    margin-right: 20rpx;
}
form {
    width: 100%;
}
.logo-view {
    width: 240rpx;
    margin: 90rpx auto;

    text-align: center;
}
.logo-img {
    width: 240rpx;
    height: 92rpx;
}
.system-name {
    font-size: 28rpx;
    line-height: 40rpx;

    letter-spacing: 13rpx;

    color: #233e5e;
}
.input-column {
    position: relative;

    height: 140rpx;
    padding: 70rpx 10rpx 0rpx 58rpx;

    border-bottom: 1rpx solid #e1e1e1;
}
.input-img {
    position: absolute;
    top: 76rpx;
    left: 0;

    width: 40rpx;
    height: 40rpx;
}
.public-input {
    display: block;
    width: 100%;
    height: 50rpx;
    padding: 0 10rpx;

    font-size: 32rpx;
    line-height: 50rpx;

    border-radius: 10rpx;
}
.btn-view {
    margin-top: 160rpx;
}
.submit-btn {
    height: 94rpx;

    font-size: 36rpx;
    line-height: 94rpx;

    color: #fff;
    background-color: #499BF8;
}
