/* pages/waybillList/waybillList.wxss */

page {
    display: block;
    width: 100%;
    min-height: 100%;

    background-color: #f5f5f5;
}

.waybill-container {
    width: 100%;
    padding-top: 192rpx;
}


.top-bar-view {
    position: fixed;
    top: 0;
    z-index: 99;

    width: 100%;
    height: 192rpx;

    background-color: #499bf8;
}




.search-view {
    padding: 4px 16px 0 16px;
}

.search-box {
    display: flex;
    width: 100%;
    height: 72rpx;
    padding: 12rpx 0;
    flex-direction: row;

    border-radius: 50rpx;
    background-color: #fff;
}

.traggle-pick {
    position: relative;

    width: 210rpx;
    height: 48rpx;
    padding-left: 30rpx;

    border-right: 1rpx solid #abb1b1;
}

.filed-picker {
    width: 130rpx;

    font-size: 28rpx;
    line-height: 48rpx;

    color: #666;
}

.traggle-down {
    position: absolute;
    top: 16rpx;
    right: 15rpx;

    width: 20rpx;
    height: 20rpx;
}

.traggle-down image {
    display: block;
    width: 20rpx;
    height: 20rpx;
}

.search-input-view {
    width: 450rpx;
    padding: 0 15rpx;
}

.search-input-view input {
    width: 420rpx;
    height: 48rpx;

    font-size: 28rpx;
    line-height: 48rpx;
}

.top-bar {
    width: 100%;
    height: 80rpx;
    padding-top: 32rpx;
}

.top-bar-item {
    width: 150rpx;
    height: 80rpx;

    font-size: 30rpx;

    text-align: center;

    color: #fff;
}

.top-bar-item text {
    line-height: 80rpx;

    color: #d0f2f1;
}

.top-bar-item .choosed-bar {
    display: inline-block;
    height: 77rpx;

    font-size: 32rpx;
    font-weight: 500;

    color: #fff;
    border-bottom: 4rpx solid #fff;
}

.waybill-list {
    width: 100%;
    padding: 40rpx 40rpx 40rpx 40rpx;

    background-color: #f5f5f5;
}

.waybill-item {
    width: 100%;
    padding-bottom: 40rpx;
    margin-bottom: 36rpx;

    border-radius: 8rpx;
    background-color: #fff;
    box-shadow: 0 0 5px #dbdbdb;
}

.waybill-item-title {
    height: 82rpx;
    padding: 0 40rpx;

    font-size: 28rpx;
    line-height: 82rpx;

    color: #fff;
    border-top-left-radius: 8rpx;
    border-top-right-radius: 8rpx;
    background-color: #659ad7;
}

.waybill-item-content {
    position: relative;

    padding: 30rpx 40rpx 0 40rpx;

    font-size: 28rpx;
    line-height: 58rpx;

    color: #434343;
}

.go-match-btn {
    height: 70rpx;
    width:280rpx;
    margin-top: 30rpx;

    font-size: 32rpx;
    line-height: 70rpx;

    color: #499bf8;
    border: 1px solid #499bf8;
    border-radius: 10rpx;
    background-color: #fff;
}

.go-fix-btn{
    height: 70rpx;
    width:100%;
    margin-top: 30rpx;

    font-size: 32rpx;
    line-height: 70rpx;

    color: #499bf8;
    border: 1px solid #499bf8;
    border-radius: 10rpx;
    background-color: #fff;
}

.up-order-btn{
    height: 70rpx;
    width:280rpx;
    margin-top: 30rpx;

    font-size: 32rpx;
    line-height: 70rpx;

    color: #17BEBB;
    border: 1px solid #17BEBB;
    border-radius: 10rpx;
    background-color: #fff;
}
.waybill-status {
    position: absolute;
    top: 28rpx;
    right: 40rpx;

    color: #499bf8;
}
.null-view {
    width: 270rpx;
    margin: 180rpx auto 0 auto;

    text-align: center;
}

.null-view image {
    width: 270rpx;
    height: 270rpx;
}

.null-view text {
    font-size: 32rpx;
    font-weight: 400;
    line-height: 44rpx;

    color: #a4aeba;
}

.gray-tip {
    margin-bottom: 20rpx;

    font-size: 28rpx;
    font-weight: 400;
    line-height: 44rpx;

    text-align: center;

    color: #a4aeba;
}
